@model Crud3.Models.Auditoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Auditoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Alteração" class="control-label"></label>
                <input asp-for="Alteração" class="form-control" />
                <span asp-validation-for="Alteração" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-secondary">Voltar para lista</button></a></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
